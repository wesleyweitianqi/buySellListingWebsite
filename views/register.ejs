<!DOCTYPE html>
<html lang="en">

<head>
  <title>Register</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/register.css" type="text/css"/>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
  <%- include('partials/_nav') %>
  <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
<h1>Register an Account</h1>
<form class="register" method="POST" action="/api/users/register">
  <div id="register_form">
    <label class="name_form" for="name">Full name</label>
    <input
      type="text"
      name="name"
      placeholder="Full Name"
      size="50"
    />
    <label class="email_form" for="email">Email Address</label>
    <input
      type="email"
      name="email"
      placeholder="Email"
      size="50"
    />
    <label class="password_form" for="password">Password</label>
    <input
      type="password"
      name="password"
      placeholder="Password"
      size="50"
    />
    <button type="submit" class="register_button btn btn-primary">Register</button>
  </div>
</form>
<%- include('partials/_footer') %>
</body>
</html>
