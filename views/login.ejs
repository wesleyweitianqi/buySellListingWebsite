<!DOCTYPE html>
<html lang="en">

<head>
  <title>Login</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="styles/login.css" type="text/css"/>

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
  <%- include('partials/_nav') %>
  <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
<h1>Sign In</h1>
<form class="sign-in" method="POST" action="/api/users/login">
  <div id="sign_in_form">
    <label class="email_form" for="email">Email Address:</label>
    <input
      type="text"
      name="email"
      placeholder="Email"
      size="50"
    />
    <label class="password_form" for="password">Password:</label>
    <input
      type="password"
      name="password"
      placeholder="Password"
      size="50"
    />
    <button type="submit" class="login_button btn btn-primary">Sign In</button>
    <span class="registers_button" >Don't have an account?<button type="submit" class="btn btn-primary">Register</button></span>
  </div>
</form>
</body>
</html>
